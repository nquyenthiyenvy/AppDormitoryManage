<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF5F5"
    android:id="@+id/main"
    tools:context=".MainActivity">

    <!-- Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="0dp"
        android:layout_height="?attr/actionBarSize"
        android:background="#3F51B5"
        android:title="@string/title_toolbar"
        android:titleTextColor="@android:color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Header -->
    <TextView
        android:id="@+id/tvHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/header_room_management"
        android:textColor="#3F51B5"
        android:textStyle="bold"
        android:textSize="22sp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Form Container -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layoutForm"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#FFF"
        android:padding="16dp"
        android:layout_margin="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/tvHeader"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Room Name -->
        <TextView
            android:id="@+id/tvRoomName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_room_name"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <EditText
            android:id="@+id/edtRoomName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="@string/hint_room_name"
            android:layout_marginStart="16dp"
            app:layout_constraintStart_toEndOf="@id/tvRoomName"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/tvRoomName" />

        <!-- Room Type -->
        <TextView
            android:id="@+id/tvRoomType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_room_type"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/edtRoomName"
            app:layout_constraintStart_toStartOf="parent" />

        <RadioGroup
            android:id="@+id/rgRoomType"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="16dp"
            app:layout_constraintStart_toEndOf="@id/tvRoomType"
            app:layout_constraintTop_toTopOf="@id/tvRoomType"
            app:layout_constraintEnd_toEndOf="parent">

            <RadioButton
                android:id="@+id/rbMale"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/room_type_male" />

            <RadioButton
                android:id="@+id/rbFemale"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/room_type_female"
                android:layout_marginStart="16dp" />
        </RadioGroup>

        <!-- Buttons -->
        <Button
            android:id="@+id/btnClear"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/btn_clear"
            android:backgroundTint="#3F51B5"
            android:textColor="@android:color/white"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintTop_toBottomOf="@id/rgRoomType"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/btnSave"
            app:layout_constraintWidth_percent="0.45" />

        <Button
            android:id="@+id/btnSave"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/btn_save"
            android:backgroundTint="#3F51B5"
            android:textColor="@android:color/white"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/rgRoomType"
            app:layout_constraintStart_toEndOf="@id/btnClear"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintWidth_percent="0.45" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- ListView -->
    <ListView
        android:id="@+id/listRooms"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/layoutForm"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:dividerHeight="8dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
