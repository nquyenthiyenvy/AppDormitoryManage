<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">
    <ImageView
        android:id="@+id/imgLogo"
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:src="@drawable/logostu"
        android:contentDescription="Logo STU"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="60dp"/>
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="QUẢN LÝ KÝ TÚC XÁ STU"
        android:textSize="35sp"
        android:textStyle="bold"
        android:textColor="#3F51B5"
        app:layout_constraintTop_toBottomOf="@id/imgLogo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp"/>

    <TextView
        android:id="@+id/tvLabelUser"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="Tên đăng nhập:"
        android:textSize="10pt"
        android:gravity="center_vertical"
        app:layout_constraintTop_toTopOf="@id/edtUsername"
        app:layout_constraintBottom_toBottomOf="@id/edtUsername"
        app:layout_constraintStart_toStartOf="parent"/>

    <EditText
        android:id="@+id/edtUsername"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:hint="Nhập tên đăng nhập"
        android:textSize="10pt"
        android:padding="10dp"
        android:inputType="text"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        app:layout_constraintStart_toEndOf="@id/tvLabelUser"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="45dp"
        android:layout_marginStart="10dp"/>

    <TextView
        android:id="@+id/tvLabelPass"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="Mật khẩu:"
        android:textSize="10pt"
        android:gravity="center_vertical"
        app:layout_constraintTop_toTopOf="@id/edtPassword"
        app:layout_constraintBottom_toBottomOf="@id/edtPassword"
        app:layout_constraintStart_toStartOf="parent"/>

    <EditText
        android:id="@+id/edtPassword"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:hint="Nhập mật khẩu"
        android:textSize="10pt"
        android:padding="10dp"
        android:inputType="textPassword"
        app:layout_constraintTop_toBottomOf="@id/edtUsername"
        app:layout_constraintStart_toEndOf="@id/tvLabelPass"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginStart="12dp"/>
    <Button
        android:id="@+id/btnLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Đăng nhập"
        android:textSize="10pt"
        android:textStyle="bold|italic"
        android:textColor="#EA5233"
        android:backgroundTint="#B0C3E4"
        android:padding="12dp"
        app:layout_constraintTop_toBottomOf="@id/edtPassword"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="30dp"/>
    <TextView
        android:id="@+id/tvForgotPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quên mật khẩu?"
        android:textSize="8pt"
        android:textColor="#3F51B5"
        android:textStyle="italic"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@id/btnLogin"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="16dp"/>

    <TextView
        android:id="@+id/tvError"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Sai tên đăng nhập hoặc mật khẩu!"
        android:textColor="#D32F2F"
        android:textSize="13pt"
        android:gravity="center"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/btnLogin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>